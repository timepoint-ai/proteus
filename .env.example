# ============================================
# Clockchain Prediction Market - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
#
# Updated: November 2025
# For: BASE Mainnet Launch
# ============================================

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Network Selection
# Options: "development", "base-sepolia", "base-mainnet"
NETWORK=base-sepolia

# Chain IDs
# BASE Sepolia: 84532
# BASE Mainnet: 8453
CHAIN_ID=84532

# Deployer Private Key (without 0x prefix)
# CRITICAL: Use hardware wallet for mainnet deployments!
# For testnet only - never use this key on mainnet with real funds
DEPLOYER_PRIVATE_KEY=your_private_key_here

# ============================================
# RPC ENDPOINTS
# ============================================

# BASE Sepolia RPC (Testnet)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# BASE Mainnet RPC (Primary)
BASE_RPC_URL=https://mainnet.base.org

# Backup RPC URLs (recommended for production)
BASE_RPC_URL_BACKUP_1=https://base.llamarpc.com
BASE_RPC_URL_BACKUP_2=https://base.drpc.org

# Alchemy RPC (recommended for production - higher rate limits)
ALCHEMY_BASE_SEPOLIA_URL=https://base-sepolia.g.alchemy.com/v2/YOUR-API-KEY
ALCHEMY_BASE_MAINNET_URL=https://base-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# QuickNode RPC (backup provider)
QUICKNODE_BASE_URL=https://your-endpoint.base.quiknode.pro/YOUR-API-KEY/

# ============================================
# CONTRACT ADDRESSES (Testnet)
# ============================================

# BASE Sepolia Testnet Contracts (current deployment)
GENESIS_NFT_ADDRESS=0x1A5D4475881B93e876251303757E60E524286A24
PAYOUT_MANAGER_ADDRESS=0x88d399C949Ff2f1aaa8eA5a859Ae4d97c74f6871
PREDICTION_MARKET_ADDRESS=0x6b67cb0daaf78f63bd11195df0fd9ffe4361b93c
ACTOR_REGISTRY_ADDRESS=0xC71CC19C5573C5E1E144829800cD0005D0eDB723
DECENTRALIZED_ORACLE_ADDRESS=0x7EF22e27D44E3f4Cc2f133BB4ab2065D180be3C1
NODE_REGISTRY_ADDRESS=

# ============================================
# CONTRACT ADDRESSES (Mainnet)
# ============================================
# Fill these in after mainnet deployment

MAINNET_GENESIS_NFT_ADDRESS=
MAINNET_PAYOUT_MANAGER_ADDRESS=
MAINNET_PREDICTION_MARKET_ADDRESS=
MAINNET_ACTOR_REGISTRY_ADDRESS=
MAINNET_DECENTRALIZED_ORACLE_ADDRESS=
MAINNET_NODE_REGISTRY_ADDRESS=

# ============================================
# BLOCK EXPLORER (Basescan)
# ============================================

# Basescan API Key for contract verification
# Get from: https://basescan.org/apis
BASESCAN_API_KEY=your_basescan_api_key_here

# ============================================
# ORACLE NODES
# ============================================

# Oracle Node Wallet Addresses (minimum 3 for production)
ORACLE_NODE_1=
ORACLE_NODE_2=
ORACLE_NODE_3=
ORACLE_NODE_4=
ORACLE_NODE_5=

# Oracle Node API Keys (for server authentication)
ORACLE_API_KEY_1=
ORACLE_API_KEY_2=
ORACLE_API_KEY_3=

# ============================================
# FIREBASE CONFIGURATION
# ============================================

# Firebase Project Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Admin SDK (for server-side operations)
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============================================
# COINBASE EMBEDDED WALLET
# ============================================

# Coinbase Cloud API Key
# Get from: https://portal.cdp.coinbase.com/
COINBASE_API_KEY_NAME=your_api_key_name
COINBASE_API_KEY_SECRET=your_api_key_secret
COINBASE_PROJECT_ID=your_project_id

# Coinbase Wallet SDK Configuration
NEXT_PUBLIC_COINBASE_APP_ID=your_app_id
NEXT_PUBLIC_COINBASE_APP_NAME=Clockchain
NEXT_PUBLIC_COINBASE_APP_LOGO_URL=https://your-domain.com/logo.png

# ============================================
# TWITTER/X API
# ============================================

# Twitter API v2 Credentials
# Get from: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Twitter OAuth 2.0 (for user authentication)
TWITTER_CLIENT_ID=your_client_id
TWITTER_CLIENT_SECRET=your_client_secret

# ============================================
# FLASK BACKEND
# ============================================

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here_minimum_32_characters_long

# Flask Environment
# Options: development, production
FLASK_ENV=development
FLASK_DEBUG=True

# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database URL (if using PostgreSQL for off-chain data)
DATABASE_URL=postgresql://user:password@localhost:5432/clockchain

# Redis URL (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# ============================================
# JWT AUTHENTICATION
# ============================================

# JWT Secret for wallet authentication
JWT_SECRET=your_jwt_secret_here_should_be_long_and_random

# JWT Token Expiration (in seconds)
JWT_EXPIRATION=86400

# ============================================
# MONITORING & ERROR TRACKING
# ============================================

# Sentry (Error Tracking)
# Get from: https://sentry.io/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Datadog (Application Monitoring)
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# New Relic (Alternative to Datadog)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Clockchain

# ============================================
# CDN & STATIC ASSETS
# ============================================

# CDN URL for static assets (optional)
CDN_URL=https://cdn.your-domain.com

# IPFS Gateway for market metadata
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud

# Pinata (IPFS Service)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Next.js / Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_CHAIN_ID=84532
NEXT_PUBLIC_NETWORK=base-sepolia

# Contract Addresses for Frontend
NEXT_PUBLIC_GENESIS_NFT_ADDRESS=0x1A5D4475881B93e876251303757E60E524286A24
NEXT_PUBLIC_PREDICTION_MARKET_ADDRESS=0x6b67cb0daaf78f63bd11195df0fd9ffe4361b93c

# Feature Flags
NEXT_PUBLIC_ENABLE_GENESIS_MINTING=true
NEXT_PUBLIC_ENABLE_MARKET_CREATION=true
NEXT_PUBLIC_ENABLE_COINBASE_WALLET=true

# ============================================
# GAS & TRANSACTION CONFIGURATION
# ============================================

# Gas Price Settings (in gwei)
DEFAULT_GAS_PRICE=1
MAX_GAS_PRICE=100

# Gas Limits
CREATE_MARKET_GAS_LIMIT=500000
SUBMIT_PREDICTION_GAS_LIMIT=300000
PLACE_BET_GAS_LIMIT=200000

# Transaction Confirmation Blocks
CONFIRMATION_BLOCKS=2

# ============================================
# PLATFORM FEES
# ============================================

# Fee Distribution (in basis points, 100 = 1%)
GENESIS_NFT_FEE_BPS=140
BUILDER_POOL_FEE_BPS=280
BITTENSOR_POOL_FEE_BPS=280
PLATFORM_FEE_BPS=700

# Platform Wallet (receives fees)
PLATFORM_WALLET=your_platform_wallet_address

# ============================================
# RATE LIMITING
# ============================================

# API Rate Limits (requests per minute)
RATE_LIMIT_GENERAL=60
RATE_LIMIT_MARKET_CREATION=10
RATE_LIMIT_ORACLE_SUBMISSION=30

# ============================================
# SECURITY
# ============================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# API Keys for Server-to-Server Communication
API_KEY_ORACLE_SERVICE=your_oracle_service_api_key
API_KEY_MONITORING=your_monitoring_api_key

# Encryption Key for Sensitive Data
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# ============================================
# TESTING & DEVELOPMENT
# ============================================

# Test Accounts (testnet only!)
TEST_WALLET_1=0x_test_wallet_address_1
TEST_WALLET_2=0x_test_wallet_address_2

# Test Mode Flags
ENABLE_TEST_MODE=false
SKIP_GAS_ESTIMATION=false
MOCK_TWITTER_API=false

# Local Hardhat Network
HARDHAT_NETWORK_URL=http://localhost:8545
HARDHAT_CHAIN_ID=31337

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Deployment Mode
DEPLOYMENT_MODE=testnet

# Multisig Wallet (for emergency operations)
MULTISIG_WALLET_ADDRESS=

# Emergency Pause Controller
EMERGENCY_PAUSE_CONTROLLER=

# ============================================
# NOTIFICATIONS
# ============================================

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@your-domain.com

# Discord Webhook (for alerts)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ============================================
# ANALYTICS
# ============================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Amplitude
AMPLITUDE_API_KEY=your_amplitude_api_key

# ============================================
# BACKUP & RECOVERY
# ============================================

# Backup Wallet Addresses (cold storage)
BACKUP_WALLET_1=
BACKUP_WALLET_2=
BACKUP_WALLET_3=

# Backup RPC Endpoints
BACKUP_RPC_1=https://base.gateway.tenderly.co
BACKUP_RPC_2=https://base-rpc.publicnode.com

# ============================================
# PRODUCTION CHECKLIST
# ============================================
# Before deploying to mainnet, ensure:
# [ ] All API keys are production keys (not testnet)
# [ ] DEPLOYER_PRIVATE_KEY is from hardware wallet
# [ ] SECRET_KEY and JWT_SECRET are cryptographically secure
# [ ] FIREBASE_ADMIN_PRIVATE_KEY is properly escaped
# [ ] All _ADDRESS variables are filled after deployment
# [ ] At least 3 ORACLE_NODE addresses configured
# [ ] SENTRY_DSN configured for error tracking
# [ ] CORS_ORIGINS includes only trusted domains
# [ ] RATE_LIMIT values are appropriate for production
# [ ] TEST_MODE and DEBUG flags are disabled
# [ ] Backup wallets and RPC endpoints configured
# ============================================
